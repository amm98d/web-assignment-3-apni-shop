@model ApniShop.ViewModels.EditProductViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

@if (!User.IsInRole("Admin"))
{
    <p>
        Note: The product will be submitted for approval if you edit it.
    </p>
}

<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <input hidden asp-for="ProductID" />
            <input hidden asp-for="ProductImagePath" />
            <div class="form-group">
                <label asp-for="ProductTitle" class="control-label"></label>
                <input asp-for="ProductTitle" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ProductAvailability" class="control-label"></label>
                <input asp-for="ProductAvailability" class="form-control" />
            </div>
            <input hidden asp-for="ProductImage" />
            <div class="form-group">
                <label asp-for="ProductImage" class="col-form-label"></label><br />
                <div class="custom-file">
                    <input asp-for="ProductImage" class="form-control custom-file-input" />
                    <label class="custom-file-label">@Model.ProductImagePath</label>
                </div>
            </div><br />
            <button type="submit" class="btn btn-primary">Save</button>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    });
                </script>
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Inventory">Back to List</a>
</div>

